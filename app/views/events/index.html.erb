<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th class="text-info">Event name</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_name %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>


<div class="container-fluid">
  <div class="row border d-flex align-items-center border-info">
    <div class="col-6 text-center">
      <h2 class="text-uppercase">Upcoming Events</h2>
    </div>
    <div class="col-6 text-center">
      <h2 class="text-uppercase">Previous Events</h2>
    </div>
  </div>
  <div class="row border border-info d-flex">
    <div class="col-6 text-center d-flex flex-column">
      <% @fut_event.each do |fut| %>
        <p><%= fut.description%></p>
      <% end %>
    </div>
    <div class="col-6 text-center d-flex flex-column">
      <% @prev_event.each do |prev| %>
        <p><%= prev.description%></p>
      <% end %> 
    </div>
  </div>
</div>
